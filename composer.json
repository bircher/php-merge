{
    "name": "bircher/php-merge",
    "type": "library",
    "description": "A PHP merge utility using the Diff php library or the command line git.",
    "keywords": ["git", "merge"],
    "homepage": "https://github.com/bircher/php-merge",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabian Bircher",
            "email": "opensource@fabianbircher.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "sebastian/diff": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "cpliakas/git-wrapper": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "PhpMerge": "src/"
        }
    }
}
